# Ghostty Configuration
# Reference: https://ghostty.org/docs/config/reference

# App
quit-after-last-window-closed = true
scrollback-limit = 10000
auto-update = download

# https://ghostty.org/docs/help/terminfo#sudo
# shell-integration-features = sudo

# macOS specific
macos-non-native-fullscreen = false
macos-option-as-alt = false
# macos-icon = custom-style
# macos-icon-frame = aluminum
# macos-icon-ghost-color = #F4BA4D
# macos-icon-screen-color = #403f6f

# Font
font-family = "MonoLisa Variable"
font-size = 12
font-feature = zero
font-feature = ss01
font-feature = ss02
font-feature = ss06
font-feature = ss07
font-feature = ss08
font-feature = ss11
font-feature = ss12
font-feature = ss13
font-feature = ss14
font-feature = ss15
