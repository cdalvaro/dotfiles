// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // --- AI ASSISTANT ---
  "assistant": {
    "default_model": {
      "model": "claude-3-7-sonnet-latest",
      "provider": "anthropic"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  // --- APP ---
  "auto_update": true,
  "autosave": "on_focus_change",
  "on_last_window_closed": "quit_app",
  "restore_on_startup": "none",
  "tabs": {
    "activate_on_close": "history",
    "always_show_close_button": false,
    "close_position": "left",
    "file_icons": true,
    "git_status": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "cursor_shape": "bar"
  },

  // --- APPEARANCE ---
  "preferred_line_length": 140,
  "theme": {
    "mode": "system",
    "light": "Monokai Pro Light",
    "dark": "Monokai Pro (Filter Octagon)"
  },

  // --- DIAGNOSTICS ---
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },

  // --- EXTENSIONS ---
  "auto_install_extensions": {
    "dockerfile": true,
    "docker-compose": true,
    "git-firefly": true,
    "jinj2": true,
    "ruby": true
  },

  // --- FONTS ---
  "ui_font_size": 13,
  "buffer_font_family": "MonoLisa Variable",
  "buffer_font_size": 12,
  "buffer_font_weight": 400,
  "buffer_font_fallbacks": ["Symbols Nerd Font Mono", "SF Pro Display"],
  "buffer_font_features": {
    "calt": true,
    "zero": true,
    "ss01": true,
    "ss02": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "ss11": true,
    "ss12": true,
    "ss13": true,
    "ss14": true,
    "ss15": true,
    "ss16": true,
    "ss17": true
  },

  // --- FORMATTING ---
  "auto_indent_on_paste": true,
  "ensure_final_newline_on_save": true,
  "format_on_save": "on",

  // --- LANGUAGES ---
  "file_types": {
    "Jinja2": ["sls"]
  },
  "languages": {
    "Ruby": {
      "language_servers": ["solargraph", "rubocop", "!ruby-lsp", "..."]
    },
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "lsp": {
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": true
      }
    }
  }
}
