# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Cpp
[*.{c,cpp,cxx,h,hh,hpp}]
indent_size = 4

# Python
[*.py]
indent_size = 4

# Ruby
[*.rbs?]
indent_size = 2

# Ruby
[.ruby-version]
insert_final_newline = false

# Swift
[*.swift]
indent_size = 4

[Makefile]
indent_style = tab

[VERSION]
insert_final_newline = false
