// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // --- AI ASSISTANT ---
  "agent": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4.1"
    },
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    },
    "commit_message_model": {
      "provider": "openai",
      "model": "gpt-4.1-mini"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  // --- APP ---
  "auto_update": true,
  "autosave": "on_focus_change",
  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.idea",
    "**/.vscode",
    "**/node_modules"
  ],
  "restore_on_startup": "last_workspace",
  "tabs": {
    "activate_on_close": "history",
    "show_close_button": "hover",
    "close_position": "left",
    "file_icons": true,
    "git_status": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "cursor_shape": "bar"
  },

  // --- APPEARANCE ---
  "preferred_line_length": 140,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },

  // --- DIAGNOSTICS ---
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },

  // --- EDITOR ---
  // Indentation, rainbow indentation
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "minimap": {
    "show": "always"
  },
  "selection_highlight": true,

  // --- EXTENSIONS ---
  "auto_install_extensions": {
    "basher": true,
    "docker-compose": true,
    "dockerfile": true,
    "git-firefly": true,
    "html": true,
    "jinja2": true,
    "log": true,
    "lua": true,
    "make": true,
    "neocmake": true,
    "ruby": true,
    "ruff": true,
    "swift": true,
    "toml": true
  },

  // --- FONTS ---
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "buffer_font_weight": 400,
  // "buffer_font_family": "MonoLisa Variable",
  // "buffer_font_features": {
  //   "calt": true,
  //   "zero": true,
  //   "ss01": true,
  //   "ss02": true,
  //   "ss06": true,
  //   "ss07": true,
  //   "ss08": true,
  //   "ss11": true,
  //   "ss12": true,
  //   "ss13": true,
  //   "ss14": true,
  //   "ss15": true,
  //   "ss16": true,
  //   "ss17": true
  // },
  "buffer_font_family": "Maple Mono",
  "buffer_font_features": {
    "calt": true,
    "zero": true
  },
  "buffer_font_fallbacks": ["Symbols Nerd Font Mono", "SF Pro Display"],

  // --- FORMATTING ---
  "auto_indent_on_paste": true,
  "ensure_final_newline_on_save": true,
  "format_on_save": "on",

  // --- LANGUAGES ---
  "file_types": {
    "Jinja2": ["sls"]
  },
  "languages": {
    "Python": {
      "format_on_save": { "language_server": { "name": "ruff" } },
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    },
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph", "..."]
    },
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "lsp": {
    "clangd": {
      "arguments": ["-background-index", "-compile-commands-dir=build"]
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        }
      }
    },
    "rubocop": {
      "initialization_options": {
        "safeAutocorrect": true
      },
      "settings": {
        "use_bundler": false
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          // This disables diagnostics
          // Not supported yet: https://zed.dev/docs/languages/ruby#setting-up-ruby-lsp
          "diagnostics": false
        },
        "formatter": "rubocop"
      },
      "settings": {
        "use_bundler": false
      }
    }
  }
}
